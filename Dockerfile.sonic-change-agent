# Build stage
FROM golang:1.21-bookworm AS builder

WORKDIR /workspace

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build
ARG VERSION=dev
ARG GIT_COMMIT=unknown
ARG BUILD_TIME=unknown
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags "-X github.com/hdwhdw/sonic-change-agent/pkg/version.Version=${VERSION} \
              -X github.com/hdwhdw/sonic-change-agent/pkg/version.GitCommit=${GIT_COMMIT} \
              -X github.com/hdwhdw/sonic-change-agent/pkg/version.BuildTime=${BUILD_TIME}" \
    -o sonic-change-agent ./cmd/sonic-change-agent

# Runtime stage
FROM publicmirror.azurecr.io/debian:bookworm

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /

COPY --from=builder /workspace/sonic-change-agent /sonic-change-agent

# Create non-root user
RUN useradd -m -u 65532 -s /bin/false nonroot

USER 65532:65532

ENTRYPOINT ["/sonic-change-agent"]
