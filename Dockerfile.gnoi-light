# Build stage
FROM golang:1.21-alpine AS builder

# Install dependencies
RUN apk add --no-cache git

# Set working directory
WORKDIR /workspace

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY pkg/ pkg/
COPY cmd/gnoi-light/ cmd/gnoi-light/

# Build binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -ldflags '-extldflags "-static"' -o gnoi-light cmd/gnoi-light/main.go

# Runtime stage
FROM gcr.io/distroless/static:nonroot

# Copy binary from builder
COPY --from=builder /workspace/gnoi-light /usr/local/bin/gnoi-light

# Create base directory for file operations
USER nonroot:nonroot
WORKDIR /tmp/gnoi

# Expose gRPC port
EXPOSE 8080

# Run the server
ENTRYPOINT ["/usr/local/bin/gnoi-light"]
CMD ["--address", "0.0.0.0:8080", "--base-dir", "/mnt/host"]