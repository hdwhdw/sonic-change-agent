# Build stage
FROM golang:1.21-bookworm AS builder

# Set working directory
WORKDIR /workspace

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY pkg/ pkg/
COPY cmd/gnoi-light/ cmd/gnoi-light/

# Build binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -ldflags '-extldflags "-static"' -o gnoi-light cmd/gnoi-light/main.go

# Runtime stage
FROM publicmirror.azurecr.io/debian:bookworm

# Install minimal dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy binary from builder
COPY --from=builder /workspace/gnoi-light /usr/local/bin/gnoi-light

# Create non-root user and base directory for file operations
RUN useradd -m -u 65532 -s /bin/false nonroot && \
    mkdir -p /tmp/gnoi && \
    chown -R nonroot:nonroot /tmp/gnoi

USER nonroot:nonroot
WORKDIR /tmp/gnoi

# Expose gRPC port
EXPOSE 8080

# Run the server
ENTRYPOINT ["/usr/local/bin/gnoi-light"]
CMD ["--address", "0.0.0.0:8080", "--host-root-fs", "/mnt/host"]